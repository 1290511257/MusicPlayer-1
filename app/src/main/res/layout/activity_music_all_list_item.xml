<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical">
<!--title, artist, album-->
    <TextView
        android:id="@+id/music_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌曲名"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>


    <TextView
        android:id="@+id/music_list_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_list_title"
        android:text="歌手"
        android:layout_margin="15dp"/>
    <View
        android:id="@+id/line01"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:background="@color/background_white"
        android:layout_below="@id/music_list_title"
        android:layout_toRightOf="@id/music_list_artist"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/music_list_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_list_title"
        android:layout_toRightOf="@id/line01"
        android:text="专辑名称"
        android:layout_margin="15dp"
        />

</RelativeLayout>
