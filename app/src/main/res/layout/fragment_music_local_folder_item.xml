<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/folder_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="#00ff00" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/folder_item_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/folder_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mp3_hd"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/folder_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500é¦–"
                android:textSize="13sp" />

            <View
                android:id="@+id/line02"
                android:layout_width="1dp"
                android:layout_height="13dp"
                android:background="#ffffff"
                android:layout_toRightOf="@id/folder_item_count"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/folder_item_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="url"
                android:layout_toRightOf="@id/line02"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>